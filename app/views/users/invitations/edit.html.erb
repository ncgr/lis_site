<% title "Create Your Account" %>
<h2>Create Your Account</h2>

<p>* Required Field</p>

<%= form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:onsubmit => "processingOnSubmit()"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>    

    <fieldset>
        <legend>Password</legend>
          <p><label>Email</label> <em>(Your email address is your username.)</em><br />
          <%= f.text_field :username, :disabled => true %></p>
        
          <p>*<label>Password</label> <em>(Your password must be 6-20 characters long.)</em><br />
          <%= f.password_field :password %></p>
        
          <p>*<label>Password Confirmation</label><br />
          <%= f.password_field :password_confirmation %></p>
    </fieldset>

    <fieldset>
        <legend>Personal Information</legend>
            <p>*<label>First Name</label><br />
            <%= f.text_field :first_name %></p>
          
            <p>*<label>Last Name</label><br />
            <%= f.text_field :last_name %></p>
          
            <p><%= f.submit "Create your account", :class => "submit", :id => "submit" %></p>
    </fieldset>
<% end %>


