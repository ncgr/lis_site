<% content_for :news do %>
	<h1>Recent News</h1>
	<% unless @articles.blank? %>
		<% num = @articles.length; i = 1 %>
		<% @articles.each do |n| %>
			<p><span class="title"><%=h n.title %></span><br />
				<span class="pubDate"><%= display_time(n.timestamp) %></span>
			</p>
			<div style="clear: both;"></div>
			<%= truncate(n.body, :length => 200) %>
			<p class="right"><%= link_to "Read More &raquo;", news_article_path(n) %></p>
			<% if i < num %>
				<hr />
			<% end; i += 1 %>
		<% end %>
	<% else %>
		<p>There are no news articles to view at this time. Please check back again soon.</p>
	<% end %>
<% end %>

