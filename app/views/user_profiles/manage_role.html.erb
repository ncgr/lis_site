<h1>Manage Role for <%= @profile.first_name %> <%= @profile.last_name %></h1>

<%= form_for @profile, :url => update_role_user_profile_path(@profile) do %>
    <p>Role: <%= select_tag "role_id", options_from_collection_for_select(@roles, "id", "name", @profile.role_id) %></p>
    <p><%= submit_tag 'Update Role' %></p>
<% end %>

<%= render :partial => "shared/user_profile_links" %>

