<h1>Recent News</h1>
<%= paginate @articles %>
<% num = @articles.length; i = 1 %>
<% @articles.each do |n| %>
	<p><span class="title"><%=h n.title %></span><br />
		<span class="pubDate"><%= display_time(n.timestamp) %></span>
	</p>
	<div style="clear: both;"></div>
	<p><%= truncate_html(n.body.gsub(/\\n/, "</p><p>"), :length => 500) %></p>
	<p class="small_right"><%= link_to raw("Read More &raquo;"), news_article_path(n) %></p>
	<% if i < num %>
		<hr />
	<% end; i += 1 %>
<% end %>
<%= paginate @articles %>
